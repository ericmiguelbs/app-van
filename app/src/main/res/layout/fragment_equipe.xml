<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.equipe.EquipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"> <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione a Escola:"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinner_escola_equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/edit_nome_equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome da Equipe"
            android:minHeight="48dp"/>

        <EditText
            android:id="@+id/edit_descricao_equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição da Equipe"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/btn_cadastrar_equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastrar Equipe"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_equipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"/> </LinearLayout>
</androidx.core.widget.NestedScrollView>